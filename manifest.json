{
  "manifest_version": 3,
  "name": "얼마에요 4.0 - Monday.com 연동",
  "version": "1.0",
  "description": "얼마에요 주문서를 감지하여 Monday.com Weekly Board에 자동으로 아이템 생성",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*.monday.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"]
    }
  ]
}
